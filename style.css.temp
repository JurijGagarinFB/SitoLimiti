.sidebar {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1001;
    top: 0;
    left: 0;
    background-color: var(--card-bg);
    overflow-x: hidden;
    overflow-y: auto;
    padding-top: 4rem;
    transition: 0.5s;
    box-shadow: 5px 0 15px var(--shadow-color);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.sidebar.active {
    width: var(--sidebar-width);
    visibility: visible;
}
